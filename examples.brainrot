// ===================================
// Example 11: Game Simulation
// ===================================

rizz player_name is "Sigma Steve"
vibe player_hp is 100
vibe player_score is nada
sigma is_alive is nocap

side_quest take_damage(vibe damage)?
    chat damage under nada?
        yeet "Damage cannot be negative, fr fr"
    periodt
    
    player_hp is player_hp - damage
    spill player_name
    spill " took "
    spill damage
    spill " damage. HP: "
    spill player_hp
    
    chat player_hp under_or_is nada?
        player_hp is nada
        is_alive is cap
        spill "Game Over - You took an L"
        bounce cap
    periodt
    
    bounce nocap
periodt

side_quest add_score(vibe points)?
    player_score is player_score + points
    spill "Score: "
    spill player_score
periodt

// Game loop
vibe round is 1

bussin is_alive is nocap?
    spill "Round "
    spill round
    
    bet
        sigma alive is take_damage(25)
        add_score(100)
        
        chat alive is cap?
            mid
        periodt
    cringe
        spill "Error in game logic, that's cringe"
        mid
    periodt
    
    round is round + 1
    
    chat round over 3?
        spill "You survived 3 rounds, you're bussin!"
        mid
    periodt
periodt

spill "Final score: "
spill player_score


